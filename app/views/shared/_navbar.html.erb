     <%= link_to "Post Gig", dashboard_path,class: "navbar-item" %>
      <%= link_to "Browse Gig", dashboard_path,class: "navbar-item" %>
      <% if (!user_signed_in?) %>
        <div class="navbar-item">
          <div class="buttons">
            <%= link_to 'Sign Up', new_user_registration_path, class: "button is-primary" %>
            <%= link_to 'Login ', new_user_session_path, class: "button is-light" %>
